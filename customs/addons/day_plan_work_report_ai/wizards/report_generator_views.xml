<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Report Generator Form -->
        <record id="view_report_generator_form" model="ir.ui.view">
            <field name="name">day.plan.report.generator.form</field>
            <field name="model">day.plan.report.generator</field>
            <field name="arch" type="xml">
                <form string="Generate Report">
                    <group>
                        <group>
                            <field name="report_type"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                        <group>
                            <field name="employee_id"/>
                            <field name="department_id"/>
                        </group>
                    </group>
                    <footer>
                        <button name="action_generate_report" string="Generate Report"
                                type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Report Generator Action -->
        <record id="action_report_generator" model="ir.actions.act_window">
            <field name="name">Generate Report</field>
            <field name="res_model">day.plan.report.generator</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>