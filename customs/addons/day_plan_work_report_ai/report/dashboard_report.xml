<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Dashboard PDF Report Action -->
        <record id="action_report_dashboard" model="ir.actions.report">
            <field name="name">Dashboard PDF Report</field>
            <field name="model">day.plan.dashboard</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">day_plan_work_report_ai.dashboard_pdf_report</field>
            <field name="report_file">day_plan_work_report_ai.dashboard_pdf_report</field>
            <field name="binding_model_id" ref="model_day_plan_dashboard"/>
            <field name="binding_type">report</field>
            <field name="print_report_name">'Dashboard Report - %s' % (object.name or 'Dashboard')</field>
        </record>

        <!-- Add Print button to dashboard form view -->
        <record id="view_dashboard_form_with_print" model="ir.ui.view">
            <field name="name">day.plan.dashboard.form.print</field>
            <field name="model">day.plan.dashboard</field>
            <field name="inherit_id" ref="view_dashboard_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet" position="before">
                    <header>
                        <button name="%(action_report_dashboard)d" string="Print Report"
                                type="action" class="oe_highlight"/>
                    </header>
                </xpath>
            </field>
        </record>
    </data>
</odoo>