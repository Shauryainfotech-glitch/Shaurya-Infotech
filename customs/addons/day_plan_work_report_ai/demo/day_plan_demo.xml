            <field name="potential_blockers">Demo environment stability issues</field>
            <field name="estimated_hours">7</field>
            <field name="planned_start" eval="(DateTime.now() - timedelta(days=1)).replace(hour=9, minute=0)"/>
            <field name="planned_end" eval="(DateTime.now() - timedelta(days=1)).replace(hour=16, minute=0)"/>
        </record>

        <record id="demo_day_plan_3" model="day.plan">
            <field name="name">Daily Plan - Code Review and Testing</field>
            <field name="sequence">DP/00003</field>
            <field name="date" eval="DateTime.now().strftime('%Y-%m-%d')"/>
            <field name="employee_id" ref="demo_employee_1"/>
