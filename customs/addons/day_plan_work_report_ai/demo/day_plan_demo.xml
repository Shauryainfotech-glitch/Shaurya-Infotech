        <!-- Demo Day Plan Records -->
        <record id="demo_day_plan_1" model="day.plan">
            <field name="name">Daily Plan - Sprint Planning Session</field>
            <field name="sequence">DP/00001</field>
            <field name="date" eval="(DateTime.now() - timedelta(days=2)).strftime('%Y-%m-%d')"/>
            <field name="employee_id" ref="demo_employee_1"/>
            <field name="main_goals">Finalize sprint backlog and assign tasks to team members</field>
            <field name="key_results">Complete sprint planning, define acceptance criteria for all stories</field>
            <field name="focus_areas">Agile planning, team coordination, backlog refinement</field>
            <field name="potential_blockers">Unclear requirements for some user stories</field>
            <field name="estimated_hours">8</field>
            <field name="planned_start" eval="(DateTime.now() - timedelta(days=2)).replace(hour=9, minute=0)"/>
            <field name="planned_end" eval="(DateTime.now() - timedelta(days=2)).replace(hour=17, minute=0)"/>
        </record>

        <record id="demo_day_plan_2" model="day.plan">
            <field name="name">Daily Plan - Client Presentation Preparation</field>
