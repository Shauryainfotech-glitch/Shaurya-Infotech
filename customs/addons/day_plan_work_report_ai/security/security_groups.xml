<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Security Groups -->
        <record id="group_user" model="res.groups">
            <field name="name">Day Plan: User</field>
            <field name="category_id" ref="base.module_category_productivity"/>
            <field name="comment">User can create and manage their own day plans and work reports</field>
        </record>

        <record id="group_manager" model="res.groups">
            <field name="name">Day Plan: Manager</field>
            <field name="category_id" ref="base.module_category_productivity"/>
            <field name="implied_ids" eval="[(4, ref('group_user'))]"/>
            <field name="comment">Manager can view and manage team day plans and work reports</field>
        </record>

        <record id="group_admin" model="res.groups">
            <field name="name">Day Plan: Administrator</field>
            <field name="category_id" ref="base.module_category_productivity"/>
            <field name="implied_ids" eval="[(4, ref('group_manager'))]"/>
            <field name="comment">Administrator has full access to all day plan features</field>
        </record>
    </data>
</odoo>