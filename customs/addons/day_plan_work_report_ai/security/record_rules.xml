<odoo>
<data>
    <record id="rule_day_plan_user" model="ir.rule">
        <field name="name">Day Plan: User Access</field>
        <field name="model_id" ref="model_day_plan"/>
        <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('day_plan_work_report_ai.group_user'))]"/>
    </record>
    <record id="rule_work_report_user" model="ir.rule">
        <field name="name">Work Report: User Access</field>
        <field name="model_id" ref="model_work_report"/>
        <field name="domain_force">[('day_plan_id.employee_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('day_plan_work_report_ai.group_user'))]"/>
    </record>
</data>
</odoo>