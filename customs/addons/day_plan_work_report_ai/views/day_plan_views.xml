<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Day Plan Tree View -->
        <record id="view_day_plan_tree" model="ir.ui.view">
            <field name="name">day.plan.tree</field>
            <field name="model">day.plan</field>
            <field name="arch" type="xml">
                <tree string="Day Plans" decoration-success="state=='completed'" decoration-info="state=='active'">
                    <field name="sequence"/>
                    <field name="name"/>
                    <field name="date"/>
                    <field name="employee_id"/>
                    <field name="state"/>
                    <field name="total_tasks"/>
                    <field name="tasks_completed"/>
                    <field name="completion_ratio" widget="percentage"/>
                </tree>
            </field>
        </record>

        <!-- Day Plan Form View -->
        <record id="view_day_plan_form" model="ir.ui.view">
            <field name="name">day.plan.form</field>
            <field name="model">day.plan</field>
            <field name="arch" type="xml">
                <form string="Day Plan">
                    <header>
                        <button name="action_start_plan" string="Start Plan" type="object"
                                class="oe_highlight" invisible="state != 'draft'"/>
                        <button name="action_complete_plan" string="Complete Plan" type="object"
                                class="oe_highlight" invisible="state != 'active'"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,active,completed"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Plan Title"/>
                            </h1>
                            <h2>
                                <field name="sequence" readonly="1"/>
                            </h2>
                        </div>
                        <group>
                            <group>
                                <field name="date"/>
                                <field name="employee_id"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                            <group>
                                <field name="planned_start"/>
                                <field name="planned_end"/>
                                <field name="actual_start" readonly="1"/>
                                <field name="actual_end" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Plan Details">
                                <group>
                                    <field name="goals" placeholder="What do you want to achieve today?"/>
                                    <field name="key_results" placeholder="What key results do you want to achieve?"/>
                                    <field name="focus_areas" placeholder="What areas will you focus on today?"/>
                                    <field name="potential_blockers" placeholder="List any potential blockers"/>
                                </group>
                            </page>
                            <page string="Tasks">
                                <div class="oe_button_box">
                                    <button name="action_view_tasks" string="View Tasks" type="object"
                                            class="oe_stat_button" icon="fa-tasks"/>
                                </div>
                                <group>
                                    <field name="total_tasks"/>
                                    <field name="tasks_completed"/>
                                    <field name="completion_ratio" widget="percentage"/>
                                </group>
                                <field name="task_ids">
                                    <tree editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="name"/>
                                        <field name="status"/>
                                        <field name="priority"/>
                                        <field name="estimated_hours"/>
                                        <field name="progress" widget="percentage"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Day Plan Kanban View -->
        <record id="view_day_plan_kanban" model="ir.ui.view">
            <field name="name">day.plan.kanban</field>
            <field name="model">day.plan</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state" class="o_kanban_small_column">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="employee_id"/>
                    <field name="state"/>
                    <field name="completion_ratio"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_card oe_kanban_global_click">
                                <div class="oe_kanban_content">
                                    <strong><field name="name"/></strong>
                                    <div>Date: <field name="date"/></div>
                                    <div>Employee: <field name="employee_id"/></div>
                                    <progressbar field="completion_ratio" title="Progress"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Day Plan Action -->
        <record id="action_day_plan" model="ir.actions.act_window">
            <field name="name">Day Plans</field>
            <field name="res_model">day.plan</field>
            <field name="view_mode">tree,kanban,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first day plan!
                </p>
                <p>
                    Plan your daily goals and track your progress.
                </p>
            </field>
        </record>
    </data>
</odoo>