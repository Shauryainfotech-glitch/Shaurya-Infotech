<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Dashboard Form View -->
        <record id="view_dashboard_form" model="ir.ui.view">
            <field name="name">day.plan.dashboard.form</field>
            <field name="model">day.plan.dashboard</field>
            <field name="arch" type="xml">
                <form string="Productivity Dashboard">
                    <sheet>
                        <div class="oe_title">
                            <h1>Productivity Dashboard</h1>
                        </div>
                        <group>
                            <group>
                                <field name="date_from"/>
                                <field name="date_to"/>
                            </group>
                            <group>
                                <field name="employee_id"/>
                                <field name="department_id"/>
                            </group>
                        </group>
                        <group string="Key Performance Indicators">
                            <group>
                                <field name="total_plans"/>
                                <field name="completion_rate" widget="percentage"/>
                            </group>
                            <group>
                                <field name="avg_productivity"/>
                            </group>
                        </group>
                        <group string="Charts">
                            <div class="o_dashboard_chart">
                                <canvas id="productivityChart" width="400" height="200"></canvas>
                            </div>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Dashboard Action -->
        <record id="action_dashboard" model="ir.actions.act_window">
            <field name="name">Dashboard</field>
            <field name="res_model">day.plan.dashboard</field>
            <field name="view_mode">form</field>
            <field name="target">current</field>
        </record>
    </data>
</odoo>