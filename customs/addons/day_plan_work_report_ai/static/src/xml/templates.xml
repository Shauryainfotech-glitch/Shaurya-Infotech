<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="day_plan_work_report_ai.Dashboard" owl="1">
        <div class="o_dashboard">
            <div class="o_dashboard_content">
                <div t-if="state.loading" class="text-center">
                    <i class="fa fa-spinner fa-spin fa-2x"/>
                    <p>Loading dashboard data...</p>
                </div>
                <div t-else="">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="card">
                                <div class="card-body">
                                    <h5>Total Plans</h5>
                                    <h2 t-esc="state.data.total_plans or 0"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card">
                                <div class="card-body">
                                    <h5>Completion Rate</h5>
                                    <h2 t-esc="Math.round(state.data.completion_rate || 0)"/>%
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card">
                                <div class="card-body">
                                    <h5>Avg Productivity</h5>
                                    <h2 t-esc="Math.round(state.data.avg_productivity || 0)"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-4">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-body">
                                    <canvas id="productivityChart" width="400" height="200"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>