<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <!-- Chart Component Template - SINGLE DEFINITION -->
    <t t-name="day_plan_work_report_ai.DashboardChart">
        <div t-att-style="props.style || 'height: 300px;'" class="chart-container">
            <canvas t-ref="chart"></canvas>
        </div>
    </t>

    <!-- Main Dashboard Template -->
    <t t-name="day_plan_work_report_ai.NewProductivityDashboard">
        <div class="o_new_productivity_dashboard py-3">
            <!-- Header -->
            <div class="container-fluid mb-4">
                <div class="row">
                    <div class="col-12">
                        <div class="d-flex justify-content-between align-items-center">
                            <h1>Productivity Dashboard</h1>
                            <div class="btn-group">
                                <button t-on-click="printDashboard" class="btn btn-primary">
                                    <i class="fa fa-print me-2"></i>Print Dashboard
                                </button>
                                <button t-on-click="refreshDashboard" class="btn btn-secondary">
                                    <i class="fa fa-refresh me-2"></i>Refresh
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Loading indicator -->
            <div t-if="state.loading" class="d-flex justify-content-center my-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>

            <!-- Error display -->
            <div t-if="state.error" class="alert alert-danger" role="alert">
                <strong>Error:</strong> <t t-esc="state.error"/>
            </div>

            <!-- Dashboard Content -->
            <div t-else="" class="container-fluid">
                <!-- KPI Cards -->
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="card bg-primary text-white">
                            <div class="card-body">
                                <h5 class="card-title">Total Plans</h5>
                                <h2><t t-esc="state.totalPlans"/></h2>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-success text-white">
                            <div class="card-body">
                                <h5 class="card-title">Completion Rate</h5>
                                <h2><t t-esc="state.completionRate"/>%</h2>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-info text-white">
                            <div class="card-body">
                                <h5 class="card-title">Productivity Score</h5>
                                <h2><t t-esc="state.productivityScore"/></h2>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-warning text-white">
                            <div class="card-body">
                                <h5 class="card-title">Attention Items</h5>
                                <h2><t t-esc="state.attentionItems"/></h2>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Charts Section -->
                <div class="row">
                    <!-- Line Chart -->
                    <div class="col-md-6 mb-4">
                        <div class="card">
                            <div class="card-header">
                                <h5>Productivity Trend</h5>
                            </div>
                            <div class="card-body">
                                <t t-component="DashboardChart"
                                   data="state.lineChartData"
                                   type="'line'"
                                   style="'height: 300px;'"/>
                            </div>
                        </div>
                    </div>

                    <!-- Pie Chart -->
                    <div class="col-md-6 mb-4">
                        <div class="card">
                            <div class="card-header">
                                <h5>Task Distribution</h5>
                            </div>
                            <div class="card-body">
                                <t t-component="DashboardChart"
                                   data="state.pieChartData"
                                   type="'pie'"
                                   style="'height: 300px;'"/>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Bar Chart -->
                <div class="row">
                    <div class="col-12 mb-4">
                        <div class="card">
                            <div class="card-header">
                                <h5>Weekly Performance</h5>
                            </div>
                            <div class="card-body">
                                <t t-component="DashboardChart"
                                   data="state.chartData"
                                   type="'bar'"
                                   style="'height: 400px;'"/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>