<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Demo Customer -->
        <record id="demo_customer_manufacturing" model="res.partner">
            <field name="name">Demo Manufacturing Co.</field>
            <field name="is_company">True</field>
            <field name="customer_rank">1</field>
            <field name="email">demo@manufacturing.example.com</field>
            <field name="phone">+1-555-0123</field>
            <field name="street">123 Manufacturing Ave</field>
            <field name="city">Industrial City</field>
            <field name="zip">12345</field>
            <field name="country_id" ref="base.us"/>
        </record>

        <!-- Demo Products -->
        <record id="demo_product_widget" model="product.product">
            <field name="name">Custom Widget</field>
            <field name="default_code">WIDGET-001</field>
            <field name="type">storable</field> <!-- Changed from 'product' to 'storable' -->
            <field name="categ_id" ref="product.product_category_all"/>
            <field name="standard_price">50.0</field>
            <field name="list_price">100.0</field>
            <field name="uom_id" ref="uom.product_uom_unit"/>
            <field name="uom_po_id" ref="uom.product_uom_unit"/>
        </record>

        <record id="demo_material_steel" model="product.product">
            <field name="name">Steel Plate</field>
            <field name="default_code">STEEL-001</field>
            <field name="type">consu</field> <!-- Changed from 'product' to 'consu' -->
            <field name="categ_id" ref="product.product_category_all"/>
            <field name="standard_price">25.0</field>
            <field name="list_price">35.0</field>
            <field name="uom_id" ref="uom.product_uom_kg"/>
            <field name="uom_po_id" ref="uom.product_uom_kg"/>
        </record>

        <record id="demo_material_aluminum" model="product.product">
            <field name="name">Aluminum Rod</field>
            <field name="default_code">ALU-001</field>
            <field name="type">consu</field> <!-- Changed from 'product' to 'consu' -->
            <field name="categ_id" ref="product.product_category_all"/>
            <field name="standard_price">15.0</field>
            <field name="list_price">22.0</field>
            <field name="uom_id" ref="uom.product_uom_meter"/>
            <field name="uom_po_id" ref="uom.product_uom_meter"/>
        </record>

        <!-- Demo Estimation -->
        <record id="demo_estimation_001" model="mrp.estimation">
            <field name="name">EST/2025/0001</field>
            <field name="partner_id" ref="demo_customer_manufacturing"/>
            <field name="product_id" ref="demo_product_widget"/>
            <field name="product_qty">100</field>
            <field name="product_uom_id" ref="uom.product_uom_unit"/>
            <field name="estimation_date" eval="(DateTime.now() - timedelta(days=5)).strftime('%Y-%m-%d')"/>
            <field name="validity_date" eval="(DateTime.now() + timedelta(days=30)).strftime('%Y-%m-%d')"/>
            <field name="state">draft</field>
            <field name="material_markup_type">percentage</field>
            <field name="material_markup_value">10.0</field>
            <field name="cost_markup_type">percentage</field>
            <field name="cost_markup_value">15.0</field>
            <field name="notes">Demo estimation for custom widget manufacturing</field>
        </record>

        <!-- Demo Estimation Lines -->
        <record id="demo_estimation_line_001" model="mrp.estimation.line">
            <field name="estimation_id" ref="demo_estimation_001"/>
            <field name="sequence">10</field>
            <field name="product_id" ref="demo_material_steel"/>
            <field name="product_qty">150</field>
            <field name="product_uom_id" ref="uom.product_uom_kg"/>
            <field name="product_cost">25.0</field>
            <field name="markup_percentage">5.0</field>
        </record>

        <record id="demo_estimation_line_002" model="mrp.estimation.line">
            <field name="estimation_id" ref="demo_estimation_001"/>
            <field name="sequence">20</field>
            <field name="product_id" ref="demo_material_aluminum"/>
            <field name="product_qty">50</field>
            <field name="product_uom_id" ref="uom.product_uom_meter"/>
            <field name="product_cost">15.0</field>
            <field name="markup_percentage">8.0</field>
        </record>

        <!-- Demo Estimation Costs -->
        <record id="demo_estimation_cost_001" model="mrp.estimation.cost">
            <field name="estimation_id" ref="demo_estimation_001"/>
            <field name="sequence">10</field>
            <field name="name">Machining Operations</field>
            <field name="cost_type">operation</field>
            <field name="operation_time">20.0</field>
            <field name="hourly_rate">75.0</field>
        </record>

        <record id="demo_estimation_cost_002" model="mrp.estimation.cost">
            <field name="estimation_id" ref="demo_estimation_001"/>
            <field name="sequence">20</field>
            <field name="name">Assembly Labor</field>
            <field name="cost_type">labor</field>
            <field name="labor_hours">15.0</field>
            <field name="labor_rate">30.0</field>
            <field name="labor_overhead">20.0</field>
        </record>

        <record id="demo_estimation_cost_003" model="mrp.estimation.cost">
            <field name="estimation_id" ref="demo_estimation_001"/>
            <field name="sequence">30</field>
            <field name="name">Quality Control</field>
            <field name="cost_type">misc</field>
            <field name="unit_cost">200.0</field>
            <field name="quantity">1.0</field>
        </record>

    </data>
</odoo>
