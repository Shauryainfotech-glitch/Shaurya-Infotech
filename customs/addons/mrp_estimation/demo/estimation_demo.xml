<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Demo Product for Manufacturing -->
        <record id="demo_product_manufacturing" model="product.product">
            <field name="name">Demo Manufacturing Product</field>
            <field name="type">product</field>
            <field name="standard_price">100.0</field>
            <field name="list_price">150.0</field>
            <field name="categ_id" ref="product.product_category_all"/>
        </record>

        <!-- Demo Materials -->
        <record id="demo_material_steel" model="product.product">
            <field name="name">Steel Plate</field>
            <field name="type">product</field>
            <field name="standard_price">25.0</field>
            <field name="list_price">30.0</field>
            <field name="categ_id" ref="product.product_category_all"/>
        </record>

        <record id="demo_material_bolt" model="product.product">
            <field name="name">Bolt M8x20</field>
            <field name="type">product</field>
            <field name="standard_price">0.5</field>
            <field name="list_price">0.8</field>
            <field name="categ_id" ref="product.product_category_all"/>
        </record>

        <!-- Demo Customer -->
        <record id="demo_customer_manufacturing" model="res.partner">
            <field name="name">Manufacturing Corp</field>
            <field name="is_company">True</field>
            <field name="customer_rank">1</field>
            <field name="email">contact@manufacturingcorp.com</field>
            <field name="phone">+1-555-0123</field>
        </record>

        <!-- Demo Estimation -->
        <record id="demo_estimation_1" model="mrp.estimation">
            <field name="name">EST/2025/00001</field>
            <field name="partner_id" ref="demo_customer_manufacturing"/>
            <field name="product_id" ref="demo_product_manufacturing"/>
            <field name="product_qty">10.0</field>
            <field name="product_uom_id" ref="uom.product_uom_unit"/>
            <field name="estimation_date" eval="datetime.now().date()"/>
            <field name="validity_date" eval="(datetime.now() + timedelta(days=30)).date()"/>
            <field name="state">draft</field>
            <field name="material_markup_type">percentage</field>
            <field name="material_markup_value">10.0</field>
            <field name="cost_markup_type">percentage</field>
            <field name="cost_markup_value">15.0</field>
        </record>

        <!-- Demo Estimation Lines -->
        <record id="demo_estimation_line_1" model="mrp.estimation.line">
            <field name="estimation_id" ref="demo_estimation_1"/>
            <field name="product_id" ref="demo_material_steel"/>
            <field name="product_qty">2.0</field>
            <field name="product_uom_id" ref="uom.product_uom_unit"/>
            <field name="product_cost">25.0</field>
            <field name="markup_percentage">5.0</field>
            <field name="existing_material">True</field>
        </record>

        <record id="demo_estimation_line_2" model="mrp.estimation.line">
            <field name="estimation_id" ref="demo_estimation_1"/>
            <field name="product_id" ref="demo_material_bolt"/>
            <field name="product_qty">20.0</field>
            <field name="product_uom_id" ref="uom.product_uom_unit"/>
            <field name="product_cost">0.5</field>
            <field name="markup_percentage">10.0</field>
            <field name="existing_material">False</field>
        </record>

        <!-- Demo Estimation Costs -->
        <record id="demo_estimation_cost_1" model="mrp.estimation.cost">
            <field name="estimation_id" ref="demo_estimation_1"/>
            <field name="name">Welding Operation</field>
            <field name="cost_type">labor</field>
            <field name="labor_hours">5.0</field>
            <field name="labor_rate">25.0</field>
            <field name="labor_overhead">20.0</field>
        </record>

        <record id="demo_estimation_cost_2" model="mrp.estimation.cost">
            <field name="estimation_id" ref="demo_estimation_1"/>
            <field name="name">Quality Control</field>
            <field name="cost_type">misc</field>
            <field name="unit_cost">50.0</field>
            <field name="quantity">1.0</field>
        </record>

    </data>
</odoo>