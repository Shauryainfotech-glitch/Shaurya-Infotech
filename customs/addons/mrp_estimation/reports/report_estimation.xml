<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Estimation Report Template -->
        <template id="report_estimation">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <!-- Header -->
                            <div class="row">
                                <div class="col-12">
                                    <h2>Manufacturing Estimation</h2>
                                    <p>
                                        <strong>Reference:</strong> <span t-field="o.name"/><br/>
                                        <strong>Date:</strong> <span t-field="o.estimation_date"/><br/>
                                        <strong>Customer:</strong> <span t-field="o.partner_id"/><br/>
                                        <strong>Product:</strong> <span t-field="o.product_id"/><br/>
                                        <strong>Quantity:</strong> <span t-field="o.product_qty"/> <span t-field="o.product_uom_id"/>
                                    </p>
                                </div>
                            </div>

                            <!-- Material Lines -->
                            <t t-if="o.estimation_line_ids">
                                <h4>Materials</h4>
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Product</th>
                                            <th class="text-right">Quantity</th>
                                            <th class="text-right">Unit Cost</th>
                                            <th class="text-right">Subtotal</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="o.estimation_line_ids" t-as="line">
                                            <tr>
                                                <td><span t-field="line.product_id"/></td>
                                                <td class="text-right">
                                                    <span t-field="line.product_qty"/>
                                                    <span t-field="line.product_uom_id"/>
                                                </td>
                                                <td class="text-right">
                                                    <span t-field="line.marked_up_cost"
                                                          t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                                </td>
                                                <td class="text-right">
                                                    <span t-field="line.subtotal"
                                                          t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </t>

                            <!-- Total Summary -->
                            <div class="row">
                                <div class="col-6 offset-6">
                                    <table class="table table-sm">
                                        <tr>
                                            <td><strong>Material Total:</strong></td>
                                            <td class="text-right">
                                                <span t-field="o.material_total"
                                                      t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td><strong>Cost Total:</strong></td>
                                            <td class="text-right">
                                                <span t-field="o.cost_total"
                                                      t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                            </td>
                                        </tr>
                                        <tr style="border-top: 2px solid black;">
                                            <td><strong>Total:</strong></td>
                                            <td class="text-right">
                                                <strong>
                                                    <span t-field="o.estimation_total"
                                                          t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                                </strong>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
        
    </data>
</odoo>