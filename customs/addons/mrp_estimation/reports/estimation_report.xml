<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="action_report_estimation" model="ir.actions.report">
        <field name="name">Manufacturing Estimation</field>
        <field name="model">mrp.estimation</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">mrp_estimation.report_estimation_document</field>
        <field name="report_file">mrp_estimation.report_estimation</field>
        <field name="print_report_name">'Estimation - %s' % object.name</field>
        <field name="binding_model_id" ref="model_mrp_estimation"/>
        <field name="binding_type">report</field>
    </record>

    <template id="report_estimation_document">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page">
                        <h2>Manufacturing Estimation</h2>
                        <div class="row mt32 mb32">
                            <div class="col-6">
                                <strong>Customer:</strong>
                                <p t-field="o.partner_id"/>
                                <strong>Reference:</strong>
                                <p t-field="o.name"/>
                                <strong>Date:</strong>
                                <p t-field="o.estimation_date"/>
                            </div>
                            <div class="col-6">
                                <strong>Product:</strong>
                                <p t-field="o.product_id"/>
                                <strong>Quantity:</strong>
                                <p><span t-field="o.product_qty"/> <span t-field="o.product_uom_id"/></p>
                                <strong>Valid Until:</strong>
                                <p t-field="o.validity_date"/>
                            </div>
                        </div>

                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Material</th>
                                    <th class="text-right">Quantity</th>
                                    <th class="text-right">Unit</th>
                                    <th class="text-right">Unit Price</th>
                                    <th class="text-right">Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.estimation_line_ids" t-as="line">
                                    <td><span t-field="line.product_id"/></td>
                                    <td class="text-right"><span t-field="line.product_qty"/></td>
                                    <td class="text-right"><span t-field="line.product_uom_id"/></td>
                                    <td class="text-right"><span t-field="line.product_cost" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></td>
                                    <td class="text-right"><span t-field="line.subtotal" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/></td>
                                </tr>
                            </tbody>
                        </table>

                        <div class="row justify-content-end">
                            <div class="col-4">
                                <table class="table table-sm">
                                    <tr>
                                        <td><strong>Material Total</strong></td>
                                        <td class="text-right">
                                            <span t-field="o.material_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><strong>Cost Total</strong></td>
                                        <td class="text-right">
                                            <span t-field="o.cost_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td><strong>Markup Total</strong></td>
                                        <td class="text-right">
                                            <span t-field="o.markup_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </tr>
                                    <tr class="border-top">
                                        <td><strong>Total Amount</strong></td>
                                        <td class="text-right">
                                            <span t-field="o.estimation_total" t-options='{"widget": "monetary", "display_currency": o.currency_id}'/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>

                        <div t-if="o.customer_notes" class="mt32">
                            <strong>Notes:</strong>
                            <p t-field="o.customer_notes"/>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>