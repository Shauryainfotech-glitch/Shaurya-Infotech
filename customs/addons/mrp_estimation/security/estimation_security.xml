<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Security Groups -->
        <record id="module_category_manufacturing_estimation" model="ir.module.category">
            <field name="name">Manufacturing Estimation</field>
            <field name="description">Manage manufacturing estimations and costings</field>
            <field name="sequence">20</field>
        </record>

        <record id="group_estimation_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_manufacturing_estimation"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_estimation_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_manufacturing_estimation"/>
            <field name="implied_ids" eval="[(4, ref('group_estimation_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <!-- Record Rules -->
        <record id="estimation_comp_rule" model="ir.rule">
            <field name="name">Manufacturing Estimation: multi-company</field>
            <field name="model_id" ref="model_mrp_estimation"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <record id="estimation_line_comp_rule" model="ir.rule">
            <field name="name">Manufacturing Estimation Line: multi-company</field>
            <field name="model_id" ref="model_mrp_estimation_line"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <record id="estimation_cost_comp_rule" model="ir.rule">
            <field name="name">Manufacturing Estimation Cost: multi-company</field>
            <field name="model_id" ref="model_mrp_estimation_cost"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
        </record>

        <record id="estimation_personal_rule" model="ir.rule">
            <field name="name">Personal Estimations</field>
            <field name="model_id" ref="model_mrp_estimation"/>
            <field name="domain_force">['|', ('user_id', '=', user.id), ('user_id', '=', False)]</field>
            <field name="groups" eval="[(4, ref('group_estimation_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="estimation_manager_rule" model="ir.rule">
            <field name="name">All Estimations</field>
            <field name="model_id" ref="model_mrp_estimation"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_estimation_manager'))]"/>
        </record>
    </data>
</odoo>
