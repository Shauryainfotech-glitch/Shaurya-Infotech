<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        
        <!-- Security Groups -->
        <record id="group_estimation_user" model="res.groups">
            <field name="name">Estimation User</field>
            <field name="category_id" ref="base.module_category_manufacturing"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">User can create and manage their own estimations</field>
        </record>

        <record id="group_estimation_manager" model="res.groups">
            <field name="name">Estimation Manager</field>
            <field name="category_id" ref="base.module_category_manufacturing"/>
            <field name="implied_ids" eval="[(4, ref('group_estimation_user'))]"/>
            <field name="comment">Manager can approve estimations and manage all estimation records</field>
        </record>

        <!-- Record Rules -->
        <record id="estimation_user_rule" model="ir.rule">
            <field name="name">Estimation User Access Rule</field>
            <field name="model_id" ref="mrp_estimation.model_mrp_estimation"/>
            <field name="domain_force">['|', ('user_id', '=', user.id), ('user_id', '=', False)]</field>
            <field name="groups" eval="[(4, ref('group_estimation_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <record id="estimation_manager_rule" model="ir.rule">
            <field name="name">Estimation Manager Access Rule</field>
            <field name="model_id" ref="mrp_estimation.model_mrp_estimation"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_estimation_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Estimation Line Rules -->
        <record id="estimation_line_user_rule" model="ir.rule">
            <field name="name">Estimation Line User Access Rule</field>
            <field name="model_id" ref="mrp_estimation.model_mrp_estimation_line"/>
            <field name="domain_force">['|', ('estimation_id.user_id', '=', user.id), ('estimation_id.user_id', '=', False)]</field>
            <field name="groups" eval="[(4, ref('group_estimation_user'))]"/>
        </record>

        <record id="estimation_line_manager_rule" model="ir.rule">
            <field name="name">Estimation Line Manager Access Rule</field>
            <field name="model_id" ref="mrp_estimation.model_mrp_estimation_line"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_estimation_manager'))]"/>
        </record>

        <!-- Estimation Cost Rules -->
        <record id="estimation_cost_user_rule" model="ir.rule">
            <field name="name">Estimation Cost User Access Rule</field>
            <field name="model_id" ref="mrp_estimation.model_mrp_estimation_cost"/>
            <field name="domain_force">['|', ('estimation_id.user_id', '=', user.id), ('estimation_id.user_id', '=', False)]</field>
            <field name="groups" eval="[(4, ref('group_estimation_user'))]"/>
        </record>

        <record id="estimation_cost_manager_rule" model="ir.rule">
            <field name="name">Estimation Cost Manager Access Rule</field>
            <field name="model_id" ref="mrp_estimation.model_mrp_estimation_cost"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_estimation_manager'))]"/>
        </record>

        <!-- Estimation Version Rules -->
        <record id="estimation_version_user_rule" model="ir.rule">
            <field name="name">Estimation Version User Access Rule</field>
            <field name="model_id" ref="mrp_estimation.model_mrp_estimation_version"/>
            <field name="domain_force">['|', ('parent_estimation_id.user_id', '=', user.id), ('parent_estimation_id.user_id', '=', False)]</field>
            <field name="groups" eval="[(4, ref('group_estimation_user'))]"/>
        </record>

        <record id="estimation_version_manager_rule" model="ir.rule">
            <field name="name">Estimation Version Manager Access Rule</field>
            <field name="model_id" ref="mrp_estimation.model_mrp_estimation_version"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_estimation_manager'))]"/>
        </record>

        <!-- MRP Costing Rules -->
        <record id="mrp_costing_user_rule" model="ir.rule">
            <field name="name">MRP Costing User Access Rule</field>
            <field name="model_id" ref="mrp_estimation.model_mrp_costing"/>
            <field name="domain_force">['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_estimation_user'))]"/>
        </record>

        <record id="mrp_costing_manager_rule" model="ir.rule">
            <field name="name">MRP Costing Manager Access Rule</field>
            <field name="model_id" ref="mrp_estimation.model_mrp_costing"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_estimation_manager'))]"/>
        </record>

    </data>
</odoo>