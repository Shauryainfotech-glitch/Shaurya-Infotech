        <field name="state">code</field>
        <field name="code">
            if records:
                action = records.action_reject()
        </field>
    </record>

    <record id="action_estimation_export" model="ir.actions.server">
        <field name="name">Export Estimation</field>
        <field name="model_id" ref="model_mrp_estimation"/>
        <field name="binding_model_id" ref="model_mrp_estimation"/>
        <field name="binding_view_types">form</field>
        <field name="state">code</field>
        <field name="code">
            if records:
                action = records.action_export()
        </field>
    </record>
</odoo> 