<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <!-- Extend Configuration Settings -->
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.estimation</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="20"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Manufacturing Estimation" string="Manufacturing Estimation" data-key="mrp_estimation">
                        <h2>Manufacturing Estimation Settings</h2>

                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="approval_required"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="approval_required"/>
                                    <div class="text-muted">
                                        Require approval workflow for estimations before they can be sent to customers
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <field name="auto_markup_enabled"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <label for="auto_markup_enabled"/>
                                    <div class="text-muted">
                                        Automatically apply markup to estimation lines based on default values
                                    </div>
                                </div>
                            </div>
                        </div>

                        <h3>Default Values</h3>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <label for="estimation_sequence_prefix" string="Estimation Sequence Prefix"/>
                                    <field name="estimation_sequence_prefix" class="o_light_label"/>
                                    <div class="text-muted">
                                        Prefix for estimation sequence numbers (e.g., EST, QUOTE, etc.)
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <label for="version_increment" string="Version Increment"/>
                                    <field name="version_increment" class="o_light_label"/>
                                    <div class="text-muted">
                                        Default increment value when creating new estimation versions
                                    </div>
                                </div>
                            </div>
                        </div>

                        <h3>Markup Configuration</h3>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <label for="default_material_markup" string="Default Material Markup (%)"/>
                                    <field name="default_material_markup" class="o_light_label"/>
                                    <div class="text-muted">
                                        Default markup percentage applied to material costs
                                    </div>
                                </div>
                            </div>

                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <label for="default_cost_markup" string="Default Cost Markup (%)"/>
                                    <field name="default_cost_markup" class="o_light_label"/>
                                    <div class="text-muted">
                                        Default markup percentage applied to operation and labor costs
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>