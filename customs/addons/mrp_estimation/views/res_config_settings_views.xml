<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Simple Configuration View -->
        <record id="mrp_estimation_config_form" model="ir.ui.view">
            <field name="name">Manufacturing Estimation Configuration</field>
            <field name="model">res.config.settings</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Manufacturing Estimation Settings" class="oe_form_configuration">
                    <header>
                        <button name="execute" type="object" string="Save" class="oe_highlight"/>
                        <button string="Cancel" type="object" name="cancel" class="btn-secondary"/>
                    </header>
                    <sheet>
                        <h2>Manufacturing Estimation Settings</h2>

                        <group>
                            <group string="Workflow Settings">
                                <field name="approval_required"/>
                                <field name="auto_markup_enabled"/>
                            </group>
                            <group string="Default Values">
                                <field name="estimation_sequence_prefix"/>
                                <field name="version_increment"/>
                            </group>
                        </group>

                        <group>
                            <group string="Markup Configuration">
                                <field name="default_material_markup"/>
                                <field name="default_cost_markup"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>