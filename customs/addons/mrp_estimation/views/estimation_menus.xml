<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <!-- Portal Rules for Estimations -->
        <record id="estimation_portal_rule" model="ir.rule">
            <field name="name">Portal User: Own Estimations only</field>
            <field name="model_id" ref="model_mrp_estimation"/>
            <field name="domain_force">[('partner_id', '=', user.partner_id.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <!-- Portal Rules for Estimation Lines -->
