<odoo>
    <data>

        <!-- Define Solar Category (parent for solar modules) -->
        <record id="module_category_solar" model="ir.module.category">
            <field name="name">Solar</field>
        </record>

        <!-- Solar User Group -->
        <record id="group_solar_user" model="res.groups">
            <field name="name">Solar User</field>
            <field name="category_id" ref="module_category_solar"/>
        </record>

        <!-- Solar Manager Group -->
        <record id="group_solar_manager" model="res.groups">
            <field name="name">Solar Manager</field>
            <field name="category_id" ref="module_category_solar"/>
        </record>

        <!-- Sequences for Solar Projects -->
        <record id="seq_solar_project" model="ir.sequence">
            <field name="name">Solar Project</field>
            <field name="code">solar.project</field>
            <field name="prefix">PROJ/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Sequences for Solar Site Survey -->
        <record id="seq_solar_site_survey" model="ir.sequence">
            <field name="name">Solar Site Survey</field>
            <field name="code">solar.site.survey</field>
            <field name="prefix">SURV/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Sequences for Solar Quotes -->
        <record id="seq_solar_quote" model="ir.sequence">
            <field name="name">Solar Quote</field>
            <field name="code">solar.quote</field>
            <field name="prefix">Q/</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>

    </data>
</odoo>
