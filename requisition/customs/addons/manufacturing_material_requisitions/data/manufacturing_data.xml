        <record id="shift_morning" model="manufacturing.shift">
            <field name="name">Morning Shift</field>
            <field name="start_time">6.0</field>
            <field name="end_time">14.0</field>
            <field name="monday">True</field>
            <field name="tuesday">True</field>
            <field name="wednesday">True</field>
            <field name="thursday">True</field>
            <field name="friday">True</field>
            <field name="saturday">False</field>
            <field name="sunday">False</field>
        </record>
        
        <record id="shift_afternoon" model="manufacturing.shift">
            <field name="name">Afternoon Shift</field>
            <field name="start_time">14.0</field>
            <field name="end_time">22.0</field>
            <field name="monday">True</field>
            <field name="tuesday">True</field>
            <field name="wednesday">True</field>
            <field name="thursday">True</field>
            <field name="friday">True</field>
            <field name="saturday">False</field>
            <field name="sunday">False</field>
        </record>
        
        <record id="shift_night" model="manufacturing.shift">
            <field name="name">Night Shift</field>
            <field name="start_time">22.0</field>
            <field name="end_time">6.0</field>
            <field name="monday">True</field>
            <field name="tuesday">True</field>
            <field name="wednesday">True</field>
            <field name="thursday">True</field>
            <field name="friday">True</field>
            <field name="saturday">False</field>
            <field name="sunday">False</field>
        </record>
        
        <!-- Default Shop Floor Terminal -->
        <record id="terminal_main_floor" model="shop.floor.terminal">
            <field name="name">Main Floor Terminal</field>
            <field name="location">Main Production Floor</field>
            <field name="has_barcode_scanner">True</field>
            <field name="has_camera">True</field>
            <field name="has_microphone">False</field>
            <field name="has_printer">True</field>
        </record>
        
    </data>
</odoo> 