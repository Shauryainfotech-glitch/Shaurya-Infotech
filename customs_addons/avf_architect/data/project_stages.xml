<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Project Stages -->
        <record id="stage_concept" model="architect.project.stage">
            <field name="name">Concept Design</field>
            <field name="sequence">10</field>
            <field name="progress">10</field>
            <field name="stage_type">concept</field>
            <field name="color">1</field>
            <field name="icon">fa-lightbulb-o</field>
            <field name="requirements">
                <![CDATA[
                <ul>
                    <li>Initial client briefing completed</li>
                    <li>Site analysis and survey</li>
                    <li>Preliminary design concepts</li>
                    <li>Client approval on concept direction</li>
                </ul>
                ]]>
            </field>
            <field name="deliverables">
                <![CDATA[
                <ul>
                    <li>Concept sketches and diagrams</li>
                    <li>Site analysis report</li>
                    <li>Design brief document</li>
                    <li>Initial 3D visualizations</li>
                </ul>
                ]]>
            </field>
            <field name="expected_duration">15</field>
        </record>

        <record id="stage_preliminary" model="architect.project.stage">
            <field name="name">Preliminary Design</field>
            <field name="sequence">20</field>
            <field name="progress">25</field>
            <field name="stage_type">preliminary</field>
            <field name="color">3</field>
            <field name="icon">fa-pencil</field>
            <field name="previous_stage_id" ref="stage_concept"/>
            <field name="requirements">
                <![CDATA[
                <ul>
                    <li>Concept design approved</li>
                    <li>Detailed site measurements</li>
                    <li>Preliminary structural analysis</li>
                    <li>Building code compliance check</li>
                </ul>
                ]]>
            </field>
            <field name="deliverables">
                <![CDATA[
                <ul>
                    <li>Preliminary architectural drawings</li>
                    <li>Floor plans and elevations</li>
                    <li>Material specifications</li>
                    <li>Preliminary cost estimate</li>
                </ul>
                ]]>
            </field>
            <field name="expected_duration">30</field>
        </record>

        <record id="stage_detailed" model="architect.project.stage">
            <field name="name">Detailed Design</field>
            <field name="sequence">30</field>
            <field name="progress">50</field>
            <field name="stage_type">detailed</field>
            <field name="color">5</field>
            <field name="icon">fa-cogs</field>
            <field name="previous_stage_id" ref="stage_preliminary"/>
            <field name="requirements">
                <![CDATA[
                <ul>
                    <li>Preliminary design approved</li>
                    <li>Structural engineering coordination</li>
                    <li>MEP engineering coordination</li>
                    <li>Detailed specifications</li>
                </ul>
                ]]>
            </field>
            <field name="deliverables">
                <![CDATA[
                <ul>
                    <li>Working drawings</li>
                    <li>Technical specifications</li>
                    <li>Detail drawings</li>
                    <li>Coordinated MEP drawings</li>
                </ul>
                ]]>
            </field>
            <field name="expected_duration">45</field>
        </record>

        <record id="stage_documentation" model="architect.project.stage">
            <field name="name">Documentation</field>
            <field name="sequence">40</field>
            <field name="progress">70</field>
            <field name="stage_type">documentation</field>
            <field name="color">7</field>
            <field name="icon">fa-file-text-o</field>
            <field name="previous_stage_id" ref="stage_detailed"/>
            <field name="requirements">
                <![CDATA[
                <ul>
                    <li>All drawings completed and reviewed</li>
                    <li>Specifications finalized</li>
                    <li>Compliance documentation</li>
                    <li>Construction documents prepared</li>
                </ul>
                ]]>
            </field>
            <field name="deliverables">
                <![CDATA[
                <ul>
                    <li>Complete construction document set</li>
                    <li>Tender documents</li>
                    <li>Compliance certificates</li>
                    <li>Project manual</li>
                </ul>
                ]]>
            </field>
            <field name="expected_duration">20</field>
        </record>

        <record id="stage_approval" model="architect.project.stage">
            <field name="name">Approval</field>
            <field name="sequence">50</field>
            <field name="progress">80</field>
            <field name="stage_type">approval</field>
            <field name="color">9</field>
            <field name="icon">fa-check-circle</field>
            <field name="previous_stage_id" ref="stage_documentation"/>
            <field name="requires_approval">1</field>
            <field name="requirements">
                <![CDATA[
                <ul>
                    <li>All documentation submitted</li>
                    <li>Regulatory approvals obtained</li>
                    <li>Client final approval</li>
                    <li>Permits secured</li>
                </ul>
                ]]>
            </field>
            <field name="deliverables">
                <![CDATA[
                <ul>
                    <li>Approved drawings</li>
                    <li>Building permits</li>
                    <li>Regulatory clearances</li>
                    <li>Final project approval</li>
                </ul>
                ]]>
            </field>
            <field name="expected_duration">30</field>
        </record>

        <record id="stage_construction" model="architect.project.stage">
            <field name="name">Construction</field>
            <field name="sequence">60</field>
            <field name="progress">90</field>
            <field name="stage_type">construction</field>
            <field name="color">11</field>
            <field name="icon">fa-building</field>
            <field name="previous_stage_id" ref="stage_approval"/>
            <field name="requirements">
                <![CDATA[
                <ul>
                    <li>All approvals in place</li>
                    <li>Contractor selected</li>
                    <li>Construction supervision plan</li>
                    <li>Quality control procedures</li>
                </ul>
                ]]>
            </field>
            <field name="deliverables">
                <![CDATA[
                <ul>
                    <li>Construction supervision</li>
                    <li>Progress reports</li>
                    <li>Quality inspections</li>
                    <li>Change order management</li>
                </ul>
                ]]>
            </field>
            <field name="expected_duration">180</field>
        </record>

        <record id="stage_completion" model="architect.project.stage">
            <field name="name">Project Completion</field>
            <field name="sequence">70</field>
            <field name="progress">100</field>
            <field name="stage_type">completion</field>
            <field name="color">10</field>
            <field name="icon">fa-flag-checkered</field>
            <field name="previous_stage_id" ref="stage_construction"/>
            <field name="requirements">
                <![CDATA[
                <ul>
                    <li>Construction completed</li>
                    <li>Final inspections passed</li>
                    <li>As-built drawings prepared</li>
                    <li>Project handover completed</li>
                </ul>
                ]]>
            </field>
            <field name="deliverables">
                <![CDATA[
                <ul>
                    <li>As-built drawings</li>
                    <li>Operation and maintenance manuals</li>
                    <li>Warranty documents</li>
                    <li>Project closure report</li>
                </ul>
                ]]>
            </field>
            <field name="expected_duration">15</field>
        </record>

        <!-- Stage Checklist Templates -->
        <record id="concept_checklist_1" model="architect.stage.checklist.template">
            <field name="name">Client Brief Document</field>
            <field name="stage_id" ref="stage_concept"/>
            <field name="sequence">10</field>
            <field name="item_type">document</field>
            <field name="responsible_role">architect</field>
            <field name="verification_method">document</field>
            <field name="is_mandatory">1</field>
            <field name="description">Comprehensive client brief documenting requirements, preferences, and constraints</field>
        </record>

        <record id="concept_checklist_2" model="architect.stage.checklist.template">
            <field name="name">Site Analysis Report</field>
            <field name="stage_id" ref="stage_concept"/>
            <field name="sequence">20</field>
            <field name="item_type">document</field>
            <field name="responsible_role">architect</field>
            <field name="verification_method">document</field>
            <field name="is_mandatory">1</field>
            <field name="description">Detailed site analysis including topography, climate, utilities, and constraints</field>
        </record>

        <record id="preliminary_checklist_1" model="architect.stage.checklist.template">
            <field name="name">Preliminary Drawings</field>
            <field name="stage_id" ref="stage_preliminary"/>
            <field name="sequence">10</field>
            <field name="item_type">document</field>
            <field name="responsible_role">architect</field>
            <field name="verification_method">document</field>
            <field name="is_mandatory">1</field>
            <field name="description">Floor plans, elevations, and sections at preliminary design level</field>
        </record>

        <record id="preliminary_checklist_2" model="architect.stage.checklist.template">
            <field name="name">Building Code Compliance Check</field>
            <field name="stage_id" ref="stage_preliminary"/>
            <field name="sequence">20</field>
            <field name="item_type">review</field>
            <field name="responsible_role">architect</field>
            <field name="verification_method">checklist</field>
            <field name="is_mandatory">1</field>
            <field name="description">Review design against applicable building codes and regulations</field>
        </record>
    </data>
</odoo>
