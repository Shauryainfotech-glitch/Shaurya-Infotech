<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_architect_financial_tracking_form" model="ir.ui.view">
        <field name="name">architect.financial.tracking.form</field>
        <field name="model">architect.financial.tracking</field>
        <field name="arch" type="xml">
            <form string="Financial Tracking">
                <header>
                    <button name="action_submit" string="Submit" type="object"
                            class="oe_highlight" modifiers="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_approve" string="Approve" type="object"
                            class="oe_highlight" modifiers="{'invisible': [('state', '!=', 'submitted')]}"/>
                    <button name="action_reject" string="Reject" type="object"
                            class="btn-warning" modifiers="{'invisible': [('state', '!=', 'submitted')]}"/>
                    <button name="action_pay" string="Mark as Paid" type="object"
                            class="btn-success" modifiers="{'invisible': ['|', ('transaction_type', '!=', 'expense'), ('state', '!=', 'approved')]}"/>
                    <button name="action_receive" string="Mark as Received" type="object"
                            class="btn-success" modifiers="{'invisible': ['|', ('transaction_type', '!=', 'income'), ('state', '!=', 'approved')]}"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,submitted,approved,paid,rejected"/>
                </header>
                <sheet>

                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Transaction Reference"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="project_id"/>
                            <field name="transaction_type"/>
                            <field name="category_id"/>
                            <field name="subcategory_id"/>
                            <field name="amount" widget="monetary"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="due_date" modifiers="{'invisible': [('transaction_type', '!=', 'expense')]}"/>
                            <field name="user_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                            <field name="payment_method"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Details" name="details">
                            <group>
                                <field name="description" placeholder="Transaction description..."/>
                                <field name="notes" placeholder="Additional notes..."/>
                            </group>
                        </page>
                        <page string="Budget Tracking" name="budget">
                            <group>
                                <group>
                                    <field name="budget_id"/>
                                    <field name="budget_line_id"/>
                                    <field name="is_budgeted"/>
                                </group>
                                <group>
                                    <field name="variance_amount" widget="monetary" readonly="1"/>
                                    <field name="variance_percentage" widget="percentage" readonly="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Approval" name="approval">
                            <group>
                                <group>
                                    <field name="submitted_by" readonly="1"/>
                                    <field name="submitted_date" readonly="1"/>
                                </group>
                                <group>
                                    <field name="approved_by" readonly="1"/>
                                    <field name="approved_date" readonly="1"/>
                                    <field name="approval_notes" placeholder="Approval comments..."/>
                                </group>
                            </group>
                        </page>
                        <page string="Payment" name="payment">
                            <group>
                                <group>
                                    <field name="payment_date"/>
                                    <field name="payment_reference"/>
                                </group>
                                <group>
                                    <field name="bank_account"/>
                                    <field name="payment_notes" placeholder="Payment notes..."/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_architect_financial_tracking_kanban" model="ir.ui.view">
        <field name="name">architect.financial.tracking.kanban</field>
        <field name="model">architect.financial.tracking</field>
        <field name="arch" type="xml">
            <kanban string="Financial Tracking">
                <field name="name"/>
                <field name="project_id"/>
                <field name="transaction_type"/>
                <field name="amount"/>
                <field name="date"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong><field name="name"/></strong>
                                <ul>
                                    <li>Project: <field name="project_id"/></li>
                                    <li>Type: <field name="transaction_type"/></li>
                                    <li>Amount: <field name="amount" widget="monetary" options="{'currency_field': 'currency_id'}"/></li>
                                    <li>Date: <field name="date"/></li>
                                    <li>Status: <field name="state"/></li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_architect_financial_tracking_search" model="ir.ui.view">
        <field name="name">architect.financial.tracking.search</field>
        <field name="model">architect.financial.tracking</field>
        <field name="arch" type="xml">
            <search string="Search Financial Records">
                <field name="name"/>
                <field name="project_id"/>
                <field name="category_id"/>
                <field name="user_id"/>
                <filter string="My Records" name="my_records"
                        domain="[('user_id', '=', uid)]"/>
                <filter string="Income" name="income"
                        domain="[('transaction_type', '=', 'income')]"/>
                <filter string="Expenses" name="expenses"
                        domain="[('transaction_type', '=', 'expense')]"/>
                <filter string="Pending Approval" name="pending_approval"
                        domain="[('state', '=', 'submitted')]"/>
                <filter string="Overdue" name="overdue"
                        domain="[('due_date', '&lt;', context_today()), ('state', 'not in', ['paid', 'rejected'])]"/>
                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Submitted" name="submitted" domain="[('state', '=', 'submitted')]"/>
                <filter string="Approved" name="approved" domain="[('state', '=', 'approved')]"/>
                <filter string="Paid" name="paid" domain="[('state', '=', 'paid')]"/>
                <filter string="Rejected" name="rejected" domain="[('state', '=', 'rejected')]"/>
                <group expand="0" string="Group By">
                    <filter string="Project" name="group_project" context="{'group_by': 'project_id'}"/>
                    <filter string="Transaction Type" name="group_type" context="{'group_by': 'transaction_type'}"/>
                    <filter string="Category" name="group_category" context="{'group_by': 'category_id'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Date" name="group_date" context="{'group_by': 'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_architect_budget_form" model="ir.ui.view">
        <field name="name">architect.budget.form</field>
        <field name="model">architect.budget</field>
        <field name="arch" type="xml">
            <form string="Project Budget">
                <header>
                    <button name="action_submit" string="Submit" type="object"
                            class="oe_highlight" modifiers="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_approve" string="Approve" type="object"
                            class="oe_highlight" modifiers="{'invisible': [('state', '!=', 'submitted')]}"/>
                    <button name="action_activate" string="Activate" type="object"
                            class="oe_highlight" modifiers="{'invisible': [('state', '!=', 'approved')]}"/>
                    <button name="action_close" string="Close" type="object"
                            class="btn-secondary" modifiers="{'invisible': [('state', '!=', 'active')]}"/>
                    <button name="action_revise" string="Revise" type="object"
                            class="btn-warning" modifiers="{'invisible': [('state', 'not in', ['approved', 'active'])]}"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,submitted,approved,active,closed"/>
                </header>
                <sheet>

                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Budget Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="project_id"/>
                            <field name="budget_type"/>
                            <field name="total_amount" widget="monetary"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="manager_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Budget Lines" name="budget_lines">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="category_id"/>
                                    <field name="subcategory_id"/>
                                    <field name="description"/>
                                    <field name="budgeted_amount" widget="monetary" sum="Total Budget"/>
                                    <field name="actual_amount" widget="monetary" sum="Total Actual" readonly="1"/>
                                    <field name="variance_amount" widget="monetary" sum="Total Variance" readonly="1"/>
                                    <field name="variance_percentage" widget="percentage" readonly="1"/>
                                </list>
                            </field>
                        </page>
                        <page string="Cost Estimates" name="cost_estimates">
                            <field name="cost_estimate_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="category_id"/>
                                    <field name="estimated_amount" widget="monetary"/>
                                    <field name="confidence_level"/>
                                    <field name="date"/>
                                </list>
                            </field>
                        </page>
                        <page string="Analysis" name="analysis">
                            <group>
                                <group>
                                    <field name="spent_amount" widget="monetary" readonly="1"/>
                                    <field name="remaining_amount" widget="monetary" readonly="1"/>
                                    <field name="utilization_percentage" widget="percentage" readonly="1"/>
                                </group>
                                <group>
                                    <field name="variance_amount" widget="monetary" readonly="1"/>
                                    <field name="variance_percentage" widget="percentage" readonly="1"/>
                                    <field name="is_over_budget" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_architect_budget_kanban" model="ir.ui.view">
        <field name="name">architect.budget.kanban</field>
        <field name="model">architect.budget</field>
        <field name="arch" type="xml">
            <kanban string="Project Budgets">
                <field name="name"/>
                <field name="project_id"/>
                <field name="total_amount"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong><field name="name"/></strong>
                                <ul>
                                    <li>Project: <field name="project_id"/></li>
                                    <li>Total Amount: <field name="total_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/></li>
                                    <li>Status: <field name="state"/></li>
                                    <li>Utilized: <field name="utilization_percentage" widget="percentage"/></li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_architect_cost_estimate_form" model="ir.ui.view">
        <field name="name">architect.cost.estimate.form</field>
        <field name="model">architect.cost.estimate</field>
        <field name="arch" type="xml">
            <form string="Cost Estimate">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Estimate Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="project_id"/>
                            <field name="category_id"/>
                            <field name="subcategory_id"/>
                            <field name="estimated_amount" widget="monetary"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="confidence_level"/>
                            <field name="estimator_id"/>
                            <field name="is_approved"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Estimate description..."/>
                        </page>
                        <page string="Assumptions" name="assumptions">
                            <field name="assumptions" placeholder="Estimation assumptions..."/>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Additional notes..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_architect_cost_estimate_kanban" model="ir.ui.view">
        <field name="name">architect.cost.estimate.kanban</field>
        <field name="model">architect.cost.estimate</field>
        <field name="arch" type="xml">
            <kanban string="Cost Estimates">
                <field name="name"/>
                <field name="project_id"/>
                <field name="estimated_amount"/>
                <field name="is_approved"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <strong><field name="name"/></strong>
                                <ul>
                                    <li>Project: <field name="project_id"/></li>
                                    <li>Estimated Amount: <field name="estimated_amount" widget="monetary" options="{'currency_field': 'currency_id'}"/></li>
                                    <li>Approved: <field name="is_approved"/></li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_architect_financial_tracking" model="ir.actions.act_window">
        <field name="name">Financial Tracking</field>
        <field name="res_model">architect.financial.tracking</field>
        <field name="view_mode">kanban,form</field> <field name="context">{'search_default_my_records': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Record your first financial transaction
            </p>
            <p>
                Track all project income and expenses efficiently.
            </p>
        </field>
    </record>

    <record id="action_architect_budget" model="ir.actions.act_window">
        <field name="name">Project Budgets</field>
        <field name="res_model">architect.budget</field>
        <field name="view_mode">kanban,form</field> <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first project budget
            </p>
            <p>
                Plan and monitor project budgets effectively.
            </p>
        </field>
    </record>

    <record id="action_architect_cost_estimate" model="ir.actions.act_window">
        <field name="name">Cost Estimates</field>
        <field name="res_model">architect.cost.estimate</field>
        <field name="view_mode">kanban,form</field> <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first cost estimate
            </p>
            <p>
                Estimate project costs with confidence levels.
            </p>
        </field>
    </record>

    <record id="action_architect_financial_category" model="ir.actions.act_window">
        <field name="name">Financial Categories</field>
        <field name="res_model">architect.financial.category</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first financial category
            </p>
            <p>
                Organize financial transactions with categories.
            </p>
        </field>
    </record>

    <menuitem id="menu_financial_root" name="Financial"
              parent="menu_architect_root" sequence="20"/>

    <menuitem id="menu_financial_tracking" name="Financial Tracking"
              parent="menu_financial_root"
              action="action_architect_financial_tracking" sequence="10"/>

    <menuitem id="menu_budget" name="Budgets"
              parent="menu_financial_root"
              action="action_architect_budget" sequence="20"/>

    <menuitem id="menu_cost_estimate" name="Cost Estimates"
              parent="menu_financial_root"
              action="action_architect_cost_estimate" sequence="30"/>

    <menuitem id="menu_financial_category" name="Categories"
              parent="menu_financial_root"
              action="action_architect_financial_category" sequence="40"/>
</odoo>