                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,submitted,approved,active,closed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Budget Name"/>
                        </h1>
                    </div>
<!--                    <div class="oe_button_box" name="button_box">-->
<!--                        <button class="oe_stat_button" type="action" icon="fa-line-chart">-->
<!--                            <div class="o_field_widget o_stat_info">-->
<!--                                <span class="o_stat_value">-->
<!--                                    <field name="utilization_percentage" widget="percentage"/>-->
<!--                                </span>-->
<!--                                <span class="o_stat_text">Utilized</span>-->
<!--                            </div>-->
<!--                        </button>-->
<!--                        <button class="oe_stat_button" type="object" icon="fa-exclamation-triangle"-->
<!--                                modifiers="{'invisible': [('is_over_budget', '=', False)]}">-->
<!--                            <div class="o_field_widget o_stat_info">-->
<!--                                <span class="o_stat_value text-danger">Over Budget</span>-->
<!--                            </div>-->
<!--                        </button>-->
<!--                    </div>-->
                    <group>
                        <group>
                            <field name="project_id"/>
                            <field name="budget_type"/>
                            <field name="total_amount" widget="monetary"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="version"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="manager_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Budget Lines" name="budget_lines">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
