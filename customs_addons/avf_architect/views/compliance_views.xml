<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Compliance Form View -->
    <record id="view_architect_compliance_form" model="ir.ui.view">
        <field name="name">architect.compliance.form</field>
        <field name="model">architect.compliance</field>
        <field name="arch" type="xml">
            <form string="Compliance Tracking">
                <header>
                    <button name="action_start_compliance" string="Start Process"
                            type="object" class="oe_highlight"
                            modifiers="{'invisible': [('state', '!=', 'pending')]}"/>
                    <button name="action_submit_for_approval" string="Submit for Approval"
                            type="object" class="oe_highlight"
                            modifiers="{'invisible': [('state', '!=', 'in_progress')]}"/>
                    <button name="action_approve" string="Approve"
                            type="object" class="oe_highlight"
                            modifiers="{'invisible': [('state', '!=', 'submitted')]}"/>
                    <button name="action_reject" string="Reject"
                            type="object" class="btn-warning"
                            modifiers="{'invisible': [('state', '!=', 'submitted')]}"/>
                    <button name="action_mark_not_applicable" string="Mark as N/A"
                            type="object" class="btn-secondary"
                            modifiers="{'invisible': [('state', 'in', ['approved', 'not_applicable'])]}"/>
                    <button name="action_generate_compliance_report" string="Generate Report"
                            type="object" class="btn-secondary"/>
                    <button name="action_parivesh_integration" string="PARIVESH Portal"
                            type="object" class="btn-secondary"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="pending,in_progress,submitted,approved,rejected"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Compliance Item"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="project_id"/>
                            <field name="compliance_type_id"/>
                            <field name="category"/>
                            <field name="priority" widget="priority"/>
                            <field name="responsible_user_id"/>
                            <field name="reviewer_id"/>
                        </group>
                        <group>
                            <field name="start_date"/>
                            <field name="deadline"/>
                            <field name="submission_date"/>
                            <field name="approval_date"/>
                            <field name="expiry_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Details" name="details">
                            <group>
                                <field name="description" placeholder="Compliance description..."/>
                                <field name="regulatory_reference"/>
                                <field name="authority"/>
                                <field name="requirements" placeholder="Requirements..."/>
                                <field name="submission_details" placeholder="Submission details..."/>
                            </group>
                        </page>
                        <page string="Progress" name="progress">
                            <group>
                                <field name="progress" widget="progressbar"/>
                                <field name="checklist_progress" widget="progressbar"/>
                                <field name="notes" placeholder="Progress notes..."/>
                            </group>
                        </page>
                        <page string="Checklist" name="checklist">
                            <field name="checklist_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="completed"/>
                                    <field name="completion_date"/>
                                    <field name="completed_by"/>
                                    <field name="is_mandatory"/>
                                    <field name="document_required"/>
                                </list>
                            </field>
                        </page>
                        <page string="FCA Specific" name="fca"
                              modifiers="{'invisible': [('category', '!=', 'forest')]}">
                            <group>
                                <group>
                                    <field name="forest_clearance_required"/>
                                    <field name="forest_area"/>
                                    <field name="compensatory_afforestation"/>
                                    <field name="net_present_value" widget="monetary"/>
                                </group>
                                <group>
                                    <field name="parivesh_proposal_id"/>
                                    <field name="parivesh_status"/>
                                </group>
                            </group>
                        </page>
                        <page string="Environmental Impact" name="environmental"
                              modifiers="{'invisible': [('category', '!=', 'environmental')]}">
                            <group>
                                <group>
                                    <field name="environmental_impact_high"/>
                                    <field name="eia_required"/>
                                    <field name="public_hearing_required"/>
                                </group>
                            </group>
                            <group>
                                <field name="biodiversity_assessment" placeholder="Biodiversity assessment..."/>
                                <field name="wildlife_impact" placeholder="Wildlife impact assessment..."/>
                                <field name="mitigation_measures" placeholder="Mitigation measures..."/>
                            </group>
                        </page>
                        <page string="Cost &amp; Resources" name="cost">
                            <group>
                                <field name="estimated_cost" widget="monetary"/>
                                <field name="actual_cost" widget="monetary"/>
                                <field name="currency_id" invisible="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Compliance Tree View -->
    <record id="view_architect_compliance_tree" model="ir.ui.view">
        <field name="name">architect.compliance.list</field>
        <field name="model">architect.compliance</field>
        <field name="arch" type="xml">
            <list string="Compliance Tracking" decoration-warning="is_overdue==True"
                  decoration-success="state=='approved'" decoration-danger="state=='rejected'"
                  decoration-info="state=='pending'">
                <field name="name"/>
                <field name="project_id"/>
                <field name="category"/>
                <field name="priority" widget="priority"/>
                <field name="responsible_user_id"/>
                <field name="deadline"/>
                <field name="days_to_deadline"/>
                <field name="progress" widget="progressbar"/>
                <field name="state" widget="badge"/>
                <field name="is_overdue" invisible="1"/>
            </list>
        </field>
    </record>

    <!-- Compliance Kanban View -->
    <record id="view_architect_compliance_kanban" model="ir.ui.view">
        <field name="name">architect.compliance.kanban</field>
        <field name="model">architect.compliance</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="project_id"/>
                <field name="category"/>
                <field name="priority"/>
                <field name="deadline"/>
                <field name="progress"/>
                <field name="is_overdue"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click #{record.is_overdue.raw_value ? 'oe_kanban_color_9' : ''}">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <small class="o_kanban_record_subtitle">
                                        <field name="project_id"/>
                                    </small>
                                </div>
                                <div class="o_kanban_record_top_right">
                                    <field name="priority" widget="priority"/>
                                </div>
                            </div>
                            <div class="o_kanban_record_body">
                                <div class="row">
                                    <div class="col-6">
                                        <strong>Category:</strong>
                                        <field name="category"/>
                                    </div>
                                    <div class="col-6">
                                        <strong>Deadline:</strong>
                                        <field name="deadline"/>
                                    </div>
                                </div>
                                <div class="o_kanban_record_progress">
                                    <field name="progress" widget="progressbar"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Compliance Search View -->
    <record id="view_architect_compliance_search" model="ir.ui.view">
        <field name="name">architect.compliance.search</field>
        <field name="model">architect.compliance</field>
        <field name="arch" type="xml">
            <search string="Search Compliance">
                <field name="name"/>
                <field name="project_id"/>
                <field name="category"/>
                <field name="responsible_user_id"/>
                <filter string="My Items" name="my_items"
                        domain="[('responsible_user_id', '=', uid)]"/>
                <filter string="Overdue" name="overdue" domain="[('is_overdue', '=', True)]"/>
                <filter string="High Priority" name="high_priority" domain="[('priority', '=', '3')]"/>
                <separator/>
                <filter string="Pending" name="pending" domain="[('state', '=', 'pending')]"/>
                <filter string="In Progress" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Submitted" name="submitted" domain="[('state', '=', 'submitted')]"/>
                <filter string="Approved" name="approved" domain="[('state', '=', 'approved')]"/>
                <group expand="0" string="Group By">
                    <filter string="Project" name="group_project" context="{'group_by': 'project_id'}"/>
                    <filter string="Category" name="group_category" context="{'group_by': 'category'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Responsible" name="group_responsible" context="{'group_by': 'responsible_user_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Compliance Type Form View -->
    <record id="view_architect_compliance_type_form" model="ir.ui.view">
        <field name="name">architect.compliance.type.form</field>
        <field name="model">architect.compliance.type</field>
        <field name="arch" type="xml">
            <form string="Compliance Type">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Compliance Type"/>
                        </h1>
                        <h2>
                            <field name="code" placeholder="Type Code"/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="category"/>
                            <field name="sequence"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="typical_duration"/>
                            <field name="typical_cost" widget="monetary"/>
                            <field name="validity_period"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description" name="description">
                            <field name="description" placeholder="Type description..."/>
                        </page>
                        <page string="Regulatory Info" name="regulatory">
                            <group>
                                <field name="regulatory_authority"/>
                                <field name="regulatory_reference"/>
                            </group>
                        </page>
                        <page string="Requirements" name="requirements">
                            <field name="requirements" placeholder="Requirements..."/>
                        </page>
                        <page string="Process" name="process">
                            <field name="submission_process" placeholder="Submission process..."/>
                        </page>
                        <page string="Checklist Template" name="checklist">
                            <field name="checklist_template_ids">
                                <list editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="is_mandatory"/>
                                    <field name="document_required"/>
                                    <field name="description"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Compliance Type Tree View -->
    <record id="view_architect_compliance_type_tree" model="ir.ui.view">
        <field name="name">architect.compliance.type.list</field>
        <field name="model">architect.compliance.type</field>
        <field name="arch" type="xml">
            <list string="Compliance Types">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="code"/>
                <field name="category"/>
                <field name="regulatory_authority"/>
                <field name="typical_duration"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Actions -->
    <record id="action_architect_compliance" model="ir.actions.act_window">
        <field name="name">Compliance Tracking</field>
        <field name="res_model">architect.compliance</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_my_items': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first compliance item
            </p>
            <p>
                Track regulatory compliance for your projects efficiently.
            </p>
        </field>
    </record>

    <record id="action_architect_compliance_type" model="ir.actions.act_window">
        <field name="name">Compliance Types</field>
        <field name="res_model">architect.compliance.type</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first compliance type
            </p>
            <p>
                Define standard compliance types for your projects.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_compliance_root" name="Compliance"
              parent="menu_architect_root" sequence="35"/>

    <menuitem id="menu_compliance" name="Compliance Tracking"
              parent="menu_compliance_root"
              action="action_architect_compliance" sequence="10"/>

    <menuitem id="menu_compliance_type" name="Compliance Types"
              parent="menu_compliance_root"
              action="action_architect_compliance_type" sequence="20"/>
</odoo>