<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- DPR Form View -->
    <record id="view_architect_dpr_form" model="ir.ui.view">
        <field name="name">architect.dpr.form</field>
        <field name="model">architect.dpr</field>
        <field name="arch" type="xml">
            <form string="Detailed Project Report">
                <header>
                    <button name="action_submit_for_review" string="Submit for Review"
                            type="object" class="oe_highlight"
                            modifiers="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_approve" string="Approve"
                            type="object" class="oe_highlight"
                            modifiers="{'invisible': [('state', '!=', 'under_review')]}"/>
                    <button name="action_reject" string="Reject"
                            type="object" class="btn-warning"
                            modifiers="{'invisible': [('state', '!=', 'under_review')]}"/>
                    <button name="action_request_revision" string="Request Revision"
                            type="object" class="btn-warning"
                            modifiers="{'invisible': [('state', '!=', 'under_review')]}"/>
                    <button name="action_generate_ai_content" string="Generate AI Content"
                            type="object" class="btn-secondary"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,under_review,approved,rejected"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="DPR Title"/>
                        </h1>
                        <h2>
                            <field name="code" readonly="1"/>
                        </h2>
                    </div>
                    <group>
                        <group>
                            <field name="project_id"/>
                            <field name="dpr_type"/>
                            <field name="classification"/>
                            <field name="department"/>
                            <field name="scheme_name"/>
                        </group>
                        <group>
                            <field name="implementation_period"/>
                            <field name="start_date"/>
                            <field name="completion_date"/>
                            <field name="reviewer_id"/>
                            <field name="approver_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Financial Details" name="financial">
                            <group>
                                <group>
                                    <field name="total_cost" widget="monetary"/>
                                    <field name="central_share" widget="monetary"/>
                                    <field name="state_share" widget="monetary"/>
                                    <field name="beneficiary_share" widget="monetary"/>
                                    <field name="currency_id" invisible="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Technical Details" name="technical">
                            <group>
                                <field name="technical_specification" placeholder="Technical specifications..."/>
                                <field name="scope_of_work" placeholder="Scope of work..."/>
                                <field name="design_parameters" placeholder="Design parameters..."/>
                                <field name="quality_standards" placeholder="Quality standards..."/>
                            </group>
                        </page>
                        <page string="Environmental &amp; Social" name="environmental">
                            <group>
                                <group>
                                    <field name="environmental_clearance"/>
                                    <field name="social_impact_assessment"/>
                                    <field name="land_acquisition"/>
                                </group>
                            </group>
                            <group>
                                <field name="rehabilitation_plan" placeholder="Rehabilitation plan..."/>
                            </group>
                        </page>
                        <page string="Risk Assessment" name="risk">
                            <group>
                                <field name="risk_assessment" placeholder="Risk assessment..."/>
                                <field name="mitigation_measures" placeholder="Mitigation measures..."/>
                            </group>
                        </page>
                        <page string="Implementation" name="implementation">
                            <group>
                                <field name="implementation_strategy" placeholder="Implementation strategy..."/>
                                <field name="monitoring_mechanism" placeholder="Monitoring mechanism..."/>
                            </group>
                        </page>
                        <page string="AI Features" name="ai">
                            <group>
                                <field name="ai_generated"/>
                                <field name="ai_suggestions" placeholder="AI suggestions..."/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- DPR Tree View -->
    <record id="view_architect_dpr_tree" model="ir.ui.view">
        <field name="name">architect.dpr.tree</field>
        <field name="model">architect.dpr</field>
        <field name="arch" type="xml">
            <list string="DPR Documents" decoration-info="state=='draft'"
                  decoration-warning="state=='under_review'" decoration-success="state=='approved'"
                  decoration-danger="state=='rejected'">
                <field name="code"/>
                <field name="name"/>
                <field name="project_id"/>
                <field name="dpr_type"/>
                <field name="total_cost" widget="monetary"/>
                <field name="implementation_period"/>
                <field name="state" widget="badge"/>
            </list>
        </field>
    </record>

    <!-- DPR Actions -->
    <record id="action_architect_dpr" model="ir.actions.act_window">
        <field name="name">DPR Management</field>
        <field name="res_model">architect.dpr</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first DPR document
            </p>
            <p>
                Generate comprehensive Detailed Project Reports with AI assistance.
            </p>
        </field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_dpr_root" name="DPR Management"
              parent="menu_architect_root" sequence="25"/>

    <menuitem id="menu_dpr" name="DPR Documents"
              parent="menu_dpr_root"
              action="action_architect_dpr" sequence="10"/>
</odoo>