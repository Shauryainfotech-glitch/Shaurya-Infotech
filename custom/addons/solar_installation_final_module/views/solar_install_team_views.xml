<?xml version="1.0" encoding="utf-8"?>
<odoo>
   <data>
      <!-- Form View for Installation Team -->
      <record id="view_solar_install_team_form" model="ir.ui.view">
         <field name="name">solar.install.team.form</field>
         <field name="model">solar.install.team</field>
         <field name="arch" type="xml">
            <form string="Installation Team" version="1.1">
               <header>
                  <field name="available_capacity" readonly="1"/>
               </header>
               <sheet>
                  <group>
                     <field name="name"/>
                     <field name="code"/>
                     <field name="capacity"/>
                  </group>
                  <group>
                     <field name="member_ids" widget="many2many_tags"/>
                     <field name="skill_ids" widget="many2many_tags"/>
                  </group>
                  <group string="Workload">
                     <field name="current_workload" readonly="1"/>
                     <field name="available_capacity" readonly="1"/>
                  </group>
                  <group>
                     <field name="description"/>
                  </group>
               </sheet>
            </form>
         </field>
      </record>

      <!-- Action for Installation Teams (No Tree View) -->
      <record id="action_solar_install_team" model="ir.actions.act_window">
         <field name="name">Installation Teams</field>
         <field name="res_model">solar.install.team</field>
         <field name="view_mode">form</field> <!-- Only Form view is enabled -->
         <field name="view_id" ref="view_solar_install_team_form"/>
         <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
               Create your first installation team
            </p>
         </field>
      </record>
   </data>
</odoo>
