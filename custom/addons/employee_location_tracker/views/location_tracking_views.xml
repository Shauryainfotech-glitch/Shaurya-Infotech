<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Tracking Settings Form View -->
        <record id="view_tracking_settings_form" model="ir.ui.view">
            <field name="name">hr.location.tracking.settings.form</field>
            <field name="model">hr.location.tracking.settings</field>
            <field name="arch" type="xml">
                <form string="Tracking Settings">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object"
                                    name="action_clear_location_data" icon="fa-trash"
                                    confirm="This will permanently delete all location data for this employee. Are you sure?">
                                <div class="o_stat_info">
                                    <span class="o_stat_text">Clear</span>
                                    <span class="o_stat_text">Data</span>
                                </div>
                            </button>
                        </div>

                        <group>
                            <group name="employee_info">
                                <field name="employee_id" required="1"/>
                                <field name="company_id"/>
                            </group>
                            <group name="tracking_status">
                                <field name="total_locations" readonly="1"/>
                                <field name="last_location_time" readonly="1"/>
                                <field name="tracking_accuracy_avg" readonly="1"/>
                            </group>
                        </group>

                        <group string="Tracking Configuration">
                            <group>
                                <field name="tracking_enabled"/>
                                <field name="tracking_frequency"/>
                                <field name="privacy_mode"/>
                            </group>
                            <group>
                                <field name="tracking_hours_only"/>
                                <field name="work_start" widget="float_time"/>
                                <field name="work_end" widget="float_time"/>
                            </group>
                        </group>

                        <group string="Geofence &amp; Attendance">
                            <group>
                                <field name="auto_attendance"/>
                                <field name="alert_outside_geofence"/>
                            </group>
                        </group>

                        <group string="Battery &amp; Performance">
                            <group>
                                <field name="battery_optimization"/>
                                <field name="min_battery_level"/>
                            </group>
                        </group>

                        <group string="Data Management">
                            <group>
                                <field name="data_retention_days"/>
                            </group>
                        </group>

                        <group string="Notifications">
                            <group>
                                <field name="notify_anomalies"/>
                                <field name="notify_geofence_events"/>
                            </group>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tracking Settings Action -->
        <record id="action_tracking_settings" model="ir.actions.act_window">
            <field name="name">Tracking Settings</field>
            <field name="res_model">hr.location.tracking.settings</field>
            <field name="view_mode">form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Configure location tracking settings!
                </p>
                <p>
                    Set up tracking preferences for each employee including
                    frequency, privacy settings, and automation rules.
                </p>
            </field>
        </record>

        <!-- Tracking Session Form View -->
        <record id="view_tracking_session_form" model="ir.ui.view">
            <field name="name">hr.location.tracking.session.form</field>
            <field name="model">hr.location.tracking.session</field>
            <field name="arch" type="xml">
                <form string="Tracking Session">
                    <header>
                        <button name="action_end_session" type="object"
                                string="End Session" class="btn-primary"/>
                        <button name="action_pause_session" type="object"
                                string="Pause" class="btn-secondary"/>
                        <button name="action_resume_session" type="object"
                                string="Resume" class="btn-secondary"/>
                        <field name="status" widget="statusbar"
                               statusbar_visible="active,paused,completed"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object"
                                    name="action_view_locations" icon="fa-map-marker">
                                <field name="total_locations" widget="statinfo"
                                       string="Locations"/>
                            </button>
                        </div>

                        <group>
                            <group name="session_info">
                                <field name="employee_id" required="1"/>
                                <field name="session_type"/>
                                <field name="start_time" required="1"/>
                                <field name="end_time" readonly="1"/>
                            </group>
                            <group name="session_stats">
                                <field name="duration" readonly="1"/>
                                <field name="total_locations" readonly="1"/>
                                <field name="total_distance" readonly="1"/>
                                <field name="avg_accuracy" readonly="1"/>
                            </group>
                        </group>

                        <group string="Geofences Visited">
                            <field name="geofences_visited" widget="many2many_tags"
                                   readonly="1" nolabel="1"/>
                        </group>

                        <group string="Notes">
                            <field name="notes" widget="text" nolabel="1"/>
                        </group>

                        <group string="Company" groups="base.group_multi_company">
                            <field name="company_id"/>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tracking Session Action -->
        <record id="action_tracking_sessions" model="ir.actions.act_window">
            <field name="name">Tracking Sessions</field>
            <field name="res_model">hr.location.tracking.session</field>
            <field name="view_mode">form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No tracking sessions found!
                </p>
                <p>
                    Tracking sessions group related location data and provide
                    analytics for specific time periods or activities.
                </p>
            </field>
        </record>

        <!-- AI Analysis Action -->
        <record id="action_ai_analysis" model="ir.actions.act_window">
            <field name="name">AI Analysis</field>
            <field name="res_model">hr.location.ai.analysis</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
