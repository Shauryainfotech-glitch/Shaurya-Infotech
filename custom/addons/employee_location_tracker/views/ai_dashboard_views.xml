<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Simplified AI Dashboard for Location Analytics -->
        <record id="view_location_analytics_dashboard" model="ir.ui.view">
            <field name="name">hr.location.analytics.simple.dashboard</field>
            <field name="model">hr.location.analytics.dashboard</field>
            <field name="arch" type="xml">
                <form string="Location Analytics Dashboard">
                    <header>
                        <button name="action_refresh_data" type="object"
                                string="Refresh Data" class="btn-primary"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>Location Analytics Dashboard</h1>
                            <div class="o_row">
                                <span class="text-muted">AI-Powered Location Intelligence</span>
                            </div>
                        </div>

                        <group>
                            <group name="basic_info">
                                <field name="name" required="1"/>
                                <field name="description"/>
                            </group>
                            <group name="date_range">
                                <field name="date_from" required="1"/>
                                <field name="date_to" required="1"/>
                            </group>
                        </group>

                        <group string="Filters">
                            <group>
                                <field name="employee_ids" widget="many2many_tags"/>
                                <field name="department_ids" widget="many2many_tags"/>
                            </group>
                            <group>
                                <field name="geofence_ids" widget="many2many_tags"/>
                                <field name="company_id"/>
                            </group>
                        </group>

                        <!-- Summary Statistics Cards -->
                        <div class="row mt-4 mb-4">
                            <div class="col-lg-3 col-md-6">
                                <div class="card text-center">
                                    <div class="card-body">
                                        <h3 class="text-primary">
                                            <field name="total_locations_recorded"/>
                                        </h3>
                                        <p class="card-text">Total Locations</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-6">
                                <div class="card text-center">
                                    <div class="card-body">
                                        <h3 class="text-success">
                                            <field name="total_employees_tracked"/>
                                        </h3>
                                        <p class="card-text">Employees Tracked</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-6">
                                <div class="card text-center">
                                    <div class="card-body">
                                        <h3 class="text-warning">
                                            <field name="anomalies_detected"/>
                                        </h3>
                                        <p class="card-text">Anomalies Detected</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-6">
                                <div class="card text-center">
                                    <div class="card-body">
                                        <h3 class="text-info">
                                            <field name="total_distance_traveled" digits="[16,2]"/>
                                        </h3>
                                        <p class="card-text">Distance (km)</p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Additional Statistics -->
                        <group string="Detailed Analytics">
                            <group>
                                <field name="avg_locations_per_employee" digits="[16,2]"/>
                                <field name="geofence_violations"/>
                            </group>
                            <group>
                                <field name="total_distance_traveled" digits="[16,2]"/>
                                <field name="company_id" invisible="1"/>
                            </group>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <!-- Simple AI Analysis Action -->
        <record id="action_ai_dashboard_simple" model="ir.actions.act_window">
            <field name="name">AI Analytics Dashboard</field>
            <field name="res_model">hr.location.analytics.dashboard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_location_analytics_dashboard"/>
            <field name="target">main</field>
            <field name="context">{
                'default_name': 'Main Analytics Dashboard',
                'default_description': 'Overview of location tracking analytics'
            }</field>
        </record>

        <!-- Location Analysis Summary View -->
        <record id="view_location_analysis_summary" model="ir.ui.view">
            <field name="name">hr.employee.location.analysis.summary</field>
            <field name="model">hr.employee.location</field>
            <field name="arch" type="xml">
                <form string="Location Analysis Summary" create="false" edit="false">
                    <sheet>
                        <div class="oe_title">
                            <h1>Location AI Analysis</h1>
                        </div>
                        
                        <group>
                            <group name="location_info">
                                <field name="employee_id"/>
                                <field name="timestamp"/>
                                <field name="location_type"/>
                                <field name="status"/>
                            </group>
                            <group name="ai_analysis">
                                <field name="ai_confidence_score" widget="progressbar"/>
                                <field name="behavior_pattern"/>
                                <field name="anomaly_detected"/>
                            </group>
                        </group>

                        <group string="Location Details">
                            <group>
                                <field name="latitude" digits="[16,6]"/>
                                <field name="longitude" digits="[16,6]"/>
                                <field name="accuracy"/>
                            </group>
                            <group>
                                <field name="geofence_id"/>
                                <field name="inside_geofence"/>
                                <field name="distance_from_last"/>
                            </group>
                        </group>

                        <group string="AI Analysis Results" attrs="{'invisible': [('anomaly_details', '=', False)]}">
                            <field name="anomaly_details" widget="text" readonly="1"/>
                            <field name="validation_notes" widget="text" readonly="1"/>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <!-- Location AI Analysis Action -->
        <record id="action_location_ai_analysis" model="ir.actions.act_window">
            <field name="name">AI Location Analysis</field>
            <field name="res_model">hr.employee.location</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_location_analysis_summary"/>
            <field name="domain">[('ai_confidence_score', '>', 0)]</field>
            <field name="context">{'search_default_anomalies': 1}</field>
        </record>

    </data>
</odoo>