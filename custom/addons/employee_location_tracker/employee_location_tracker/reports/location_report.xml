<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Location Report Paper Format -->
        <record id="paperformat_location_report" model="report.paperformat">
            <field name="name">Location Report Format</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">40</field>
            <field name="margin_bottom">23</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">35</field>
            <field name="dpi">90</field>
        </record>

        <!-- Location Report Definition -->
        <record id="location_report_pdf" model="ir.actions.report">
            <field name="name">Location Tracking Report</field>
            <field name="model">hr.location.report.wizard</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">employee_location_tracker.location_report_template</field>
            <field name="report_file">employee_location_tracker.location_report_template</field>
            <field name="binding_model_id" ref="model_hr_location_report_wizard"/>
            <field name="paperformat_id" ref="paperformat_location_report"/>
            <field name="print_report_name">'Location_Report_%s_%s' % (object.date_from, object.date_to)</field>
        </record>

    </data>
</odoo>