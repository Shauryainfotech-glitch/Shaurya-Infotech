<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Location Report Wizard Form View -->
        <record id="view_location_report_wizard_form" model="ir.ui.view">
            <field name="name">hr.location.report.wizard.form</field>
            <field name="model">hr.location.report.wizard</field>
            <field name="arch" type="xml">
                <form string="Generate Location Report">
                    <sheet>
                        <group>
                            <group name="report_config">
                                <field name="report_type" required="1"/>
                                <field name="output_format" required="1"/>
                            </group>
                            <group name="date_range">
                                <field name="date_from" required="1"/>
                                <field name="date_to" required="1"/>
                            </group>
                        </group>

                        <group string="Filters">
                            <group>
                                <field name="employee_ids" widget="many2many_tags"/>
                                <field name="department_ids" widget="many2many_tags"/>
                            </group>
                            <group>
                                <field name="geofence_ids" widget="many2many_tags"/>
                                <field name="location_types"/>
                            </group>
                        </group>

                        <group string="Report Options">
                            <group>
                                <field name="include_anomalies_only"/>
                                <field name="include_map"/>
                            </group>
                            <group>
                                <field name="include_charts"/>
                                <field name="company_id"/>
                            </group>
                        </group>

                    </sheet>
                    <footer>
                        <button name="action_generate_report" type="object"
                                string="Generate Report" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <!-- Location Report Wizard Action -->
        <record id="action_location_report_wizard" model="ir.actions.act_window">
            <field name="name">Generate Location Report</field>
            <field name="res_model">hr.location.report.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_location_report_wizard_form"/>
            <field name="target">new</field>
        </record>

    </data>
</odoo>