<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Location Tracking Security Groups -->
        <record id="group_location_user" model="res.groups">
            <field name="name">Location Tracking User</field>
            <field name="category_id" ref="base.module_category_human_resources"/>
            <field name="comment">Can view own location data and submit locations</field>
        </record>

        <record id="group_location_manager" model="res.groups">
            <field name="name">Location Tracking Manager</field>
            <field name="category_id" ref="base.module_category_human_resources"/>
            <field name="implied_ids" eval="[(4, ref('group_location_user'))]"/>
            <field name="comment">Can view and manage all location data, configure geofences</field>
        </record>

        <record id="group_location_admin" model="res.groups">
            <field name="name">Location Tracking Administrator</field>
            <field name="category_id" ref="base.module_category_human_resources"/>
            <field name="implied_ids" eval="[(4, ref('group_location_manager'))]"/>
            <field name="comment">Full access to location tracking system and AI analysis</field>
        </record>

        <!-- Record Rules for Employee Locations -->
        <record id="rule_employee_location_user" model="ir.rule">
            <field name="name">Employee Location: User Own Records</field>
            <field name="model_id" ref="model_hr_employee_location"/>
            <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_location_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="rule_employee_location_manager" model="ir.rule">
            <field name="name">Employee Location: Manager All Records</field>
            <field name="model_id" ref="model_hr_employee_location"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_location_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Record Rules for Geofences -->
        <record id="rule_geofence_user" model="ir.rule">
            <field name="name">Geofence: User Read Only</field>
            <field name="model_id" ref="model_hr_location_geofence"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_location_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="rule_geofence_manager" model="ir.rule">
            <field name="name">Geofence: Manager Full Access</field>
            <field name="model_id" ref="model_hr_location_geofence"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_location_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

        <!-- Record Rules for Tracking Settings -->
        <record id="rule_tracking_settings_user" model="ir.rule">
            <field name="name">Tracking Settings: User Own Records</field>
            <field name="model_id" ref="model_hr_location_tracking_settings"/>
            <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('group_location_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="rule_tracking_settings_manager" model="ir.rule">
            <field name="name">Tracking Settings: Manager All Records</field>
            <field name="model_id" ref="model_hr_location_tracking_settings"/>
            <field name="domain_force">[('company_id', 'in', company_ids)]</field>
            <field name="groups" eval="[(4, ref('group_location_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>
