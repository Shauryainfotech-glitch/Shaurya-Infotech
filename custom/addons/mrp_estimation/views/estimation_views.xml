<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Tree View -->
        <record id="view_mrp_estimation_tree" model="ir.ui.view">
            <field name="name">mrp.estimation.tree</field>
            <field name="model">mrp.estimation</field>
            <field name="arch" type="xml">
                <tree string="Manufacturing Estimations" decoration-info="state == 'draft'" 
                      decoration-warning="state == 'waiting_approval'" 
                      decoration-success="state == 'approved'" 
                      decoration-danger="state == 'rejected'">
                    <field name="name"/>
                    <field name="date"/>
                    <field name="partner_id"/>
                    <field name="product_id"/>
                    <field name="product_qty"/>
                    <field name="total_cost" sum="Total"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_mrp_estimation_form" model="ir.ui.view">
            <field name="name">mrp.estimation.form</field>
            <field name="model">mrp.estimation</field>
            <field name="arch" type="xml">
                <form string="Manufacturing Estimation">
                    <header>
                        <button name="action_approve" string="Approve" type="object" 
                                class="oe_highlight" states="waiting_approval"
                                groups="mrp_estimation.group_estimation_approver"/>
                        <button name="action_reject" string="Reject" type="object" 
                                states="waiting_approval"
                                groups="mrp_estimation.group_estimation_approver"/>
                        <button name="action_submit" string="Submit for Approval" type="object" 
                                class="oe_highlight" states="draft"/>
                        <button name="action_reset" string="Reset to Draft" type="object" 
                                states="rejected"/>
                        <field name="state" widget="statusbar" 
                               statusbar_visible="draft,waiting_approval,approved"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id"/>
                                <field name="product_id"/>
                                <field name="product_qty"/>
                                <field name="product_uom_id"/>
                            </group>
                            <group>
                                <field name="date"/>
                                <field name="validity_date"/>
                                <field name="user_id"/>
                                <field name="approver_id" 
                                       attrs="{'invisible': [('state', '=', 'draft')]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Material Lines" name="material_lines">
                                <field name="material_line_ids" context="{'default_estimation_id': active_id}">
                                    <tree editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="product_id"/>
                                        <field name="product_qty"/>
                                        <field name="product_uom_id"/>
                                        <field name="unit_cost"/>
                                        <field name="total_cost" sum="Total"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Labor Lines" name="labor_lines">
                                <field name="labor_line_ids" context="{'default_estimation_id': active_id}">
                                    <tree editable="bottom">
                                        <field name="sequence" widget="handle"/>
                                        <field name="operation_id"/>
                                        <field name="hours"/>
                                        <field name="rate"/>
                                        <field name="total_cost" sum="Total"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Overhead" name="overhead">
                                <group>
                                    <field name="overhead_percentage"/>
                                    <field name="overhead_cost"/>
                                </group>
                            </page>
                            <page string="Notes" name="notes">
                                <field name="notes"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_mrp_estimation_search" model="ir.ui.view">
            <field name="name">mrp.estimation.search</field>
            <field name="model">mrp.estimation</field>
            <field name="arch" type="xml">
                <search string="Manufacturing Estimations">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="product_id"/>
                    <separator/>
                    <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                    <filter string="Waiting Approval" name="waiting_approval" 
                            domain="[('state', '=', 'waiting_approval')]"/>
                    <filter string="Approved" name="approved" 
                            domain="[('state', '=', 'approved')]"/>
                    <filter string="Rejected" name="rejected" 
                            domain="[('state', '=', 'rejected')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Customer" name="partner" context="{'group_by': 'partner_id'}"/>
                        <filter string="Product" name="product" context="{'group_by': 'product_id'}"/>
                        <filter string="Status" name="state" context="{'group_by': 'state'}"/>
                        <filter string="Date" name="date" context="{'group_by': 'date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Kanban View -->
        <record id="view_mrp_estimation_kanban" model="ir.ui.view">
            <field name="name">mrp.estimation.kanban</field>
            <field name="model">mrp.estimation</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile" 
                        default_group_by="state" 
                        quick_create="false">
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="product_id"/>
                    <field name="total_cost"/>
                    <field name="state"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                        <field name="name"/>
                                    </strong>
                                    <div class="o_kanban_record_subtitle">
                                        <field name="partner_id"/>
                                    </div>
                                    <div class="o_kanban_record_body">
                                        <div><field name="product_id"/></div>
                                        <div>Total: <field name="total_cost"/></div>
                                    </div>
                                    <div class="oe_kanban_bottom_left">
                                        <field name="state" widget="label_selection" 
                                               options="{'classes': {'draft': 'default', 
                                                                    'waiting_approval': 'warning', 
                                                                    'approved': 'success', 
                                                                    'rejected': 'danger'}}"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Action -->
        <record id="action_mrp_estimation" model="ir.actions.act_window">
            <field name="name">Manufacturing Estimations</field>
            <field name="res_model">mrp.estimation</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="search_view_id" ref="view_mrp_estimation_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first manufacturing estimation!
                </p>
            </field>
        </record>

    </data>
</odoo>
